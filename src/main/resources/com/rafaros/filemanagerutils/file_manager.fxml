<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rafaros.filemanagerutils.FileManagerController">
    <children>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Select Files" onAction="#handleSelectFiles"/>
                <Label text="Change Extension:"/>
                <TextField fx:id="extensionField" prefWidth="150"/>
                <Button text="Proceed" onAction="#handleProceed"/>
            </children>
        </HBox>
    </children>
</VBox>
